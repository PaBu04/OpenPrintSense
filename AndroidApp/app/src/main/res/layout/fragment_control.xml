<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".MainActivity">

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/indicator_disconnected"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Nicht verbunden"
                    android:textColor="#e0e0e0"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Verbinden"
                    android:textSize="13sp"
                    android:backgroundTint="#0f4c75"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Device ID Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDeviceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardStatus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDeviceIdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GerÃ¤te-ID:"
                    android:textColor="#94a3b8"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvDeviceId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="-"
                    android:textColor="#00d9ff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stretch Display Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStretch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardDeviceId">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStretchLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dehnung"
                    android:textColor="#94a3b8"
                    android:textSize="13sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:id="@+id/tvStretchValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#00d9ff"
                    android:textSize="64sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>

                <ProgressBar
                    android:id="@+id/progressStretch"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#00d9ff"
                    android:progressBackgroundTint="#2d3748"/>

                <TextView
                    android:id="@+id/tvRawValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Rohwert: 0"
                    android:textColor="#64748b"
                    android:textSize="14sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Calibration Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCalibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="#16213e"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardStretch">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Calibration Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCalibrationLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kalibrierung"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvCalibratedStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nicht kalibriert"
                        android:textColor="#ef4444"
                        android:textSize="13sp"/>

                </LinearLayout>

                <!-- Calibration Status Text -->
                <TextView
                    android:id="@+id/tvCalibrationStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Handschuh anziehen und Kalibrierung starten"
                    android:textColor="#94a3b8"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <!-- Calibration Values -->
                <TextView
                    android:id="@+id/tvCalibrationValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Min: 0 | Max: 1023"
                    android:textColor="#64748b"
                    android:textSize="13sp"
                    android:gravity="center"/>

                <!-- Start Calibration Button -->
                <Button
                    android:id="@+id/btnStartCalibration"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:text="Kalibrierung starten"
                    android:backgroundTint="#0f4c75"/>

                <!-- Min/Max Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSetMin"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Min setzen"
                        android:backgroundTint="#059669"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btnSetMax"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Max setzen"
                        android:backgroundTint="#dc2626"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardCalibration"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
